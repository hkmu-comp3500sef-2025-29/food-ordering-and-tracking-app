{
    "private": true,
    "type": "module",
    "scripts": {
        "tsc": "tsc --noEmit",
        "lint": "biome lint .",
        "lint:fix": "biome lint --write .",
        "fmt": "biome format --write .",
        "check": "biome check --write .",
        "client": "tsc -p tsconfig.client.dev.json && tsc-alias -p tsconfig.client.dev.json",
        "dev": "tsx watch --include './src/*' --exclude './src/scripts/*' ./src/index.ts",
        "build": "rimraf ./dist && cpy \"public/**/*\" dist/public && tsc -p tsconfig.client.prd.json && tsc-alias -p tsconfig.client.prd.json && tsc && tsc-alias && cpy \"src/views/**/*\" dist/views",
        "start": "cross-env NODE_ENV=production node ./dist/index.js"
    },
    "dependencies": {
        "compression": "^1.8.1",
        "cookie-parser": "^1.4.7",
        "dotenv": "^17.2.3",
        "ejs": "^3.1.10",
        "express": "^5.1.0",
        "express-rate-limit": "^8.2.1",
        "helmet": "^8.1.0",
        "mongodb": "^6.20.0",
        "mongoose": "^8.19.3",
        "morgan": "^1.10.1",
        "zod": "^4.1.12"
    },
    "devDependencies": {
        "@apst/biome": "~0.3.0",
        "@apst/tsconfig": "~0.1.3",
        "@biomejs/biome": "^2.3.4",
        "@types/compression": "^1.8.1",
        "@types/cookie-parser": "^1.4.10",
        "@types/express": "^5.0.5",
        "@types/morgan": "^1.9.10",
        "@types/node": "^24.10.0",
        "cpy-cli": "^6.0.0",
        "cross-env": "^10.1.0",
        "rimraf": "^6.1.0",
        "tsc-alias": "^1.8.16",
        "tsx": "^4.20.6",
        "typescript": "^5.9.3"
    },
    "packageManager": "pnpm@10.20.0",
    "engines": {
        "node": ">=24.0.0 <25.0.0"
    }
}
