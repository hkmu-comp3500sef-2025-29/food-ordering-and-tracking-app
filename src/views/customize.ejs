<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>CBN Restaurant</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: Arial, sans-serif;
        }
        
        body {
            background-color: #f5f5f5;
            padding: 20px;
            max-width: 400px;
            margin: 0 auto;
        }
        
        .header {
            text-align: center;
            margin-bottom: 20px;
        }
        
        .header h1 {
            color: #333;
            font-size: 2em;
            margin-bottom: 15px;
        }
        
        .menu-categories {
            display: flex;
            justify-content: space-around;
            margin-bottom: 20px;
            padding: 10px 0;
            border-bottom: 1px solid #ddd;
        }
        
        .menu-categories span {
            font-weight: bold;
            color: #666;
            cursor: pointer;
        }
        
        .menu-categories span.active {
            color: #e74c3c;
        }
        
        .divider {
            height: 1px;
            background-color: #ddd;
            margin: 15px 0;
        }
        
        .menu-item {
            background: white;
            border-radius: 10px;
            padding: 15px;
            margin-bottom: 15px;
            box-shadow: 0 2px 5px rgba(0,0,0,0.1);
        }
        
        .item-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 10px;
        }
        
        .item-name {
            font-weight: bold;
            font-size: 1.2em;
        }
        
        .item-price {
            color: #e74c3c;
            font-weight: bold;
        }
        
        .add-btn {
            background-color: #e74c3c;
            color: white;
            border: none;
            border-radius: 50%;
            width: 30px;
            height: 30px;
            font-size: 1.2em;
            cursor: pointer;
            display: flex;
            align-items: center;
            justify-content: center;
        }
        
        .description {
            color: #666;
            margin-bottom: 15px;
            font-size: 0.9em;
        }
        
        .option-section {
            margin-bottom: 15px;
        }
        
        .option-title {
            font-weight: bold;
            margin-bottom: 8px;
            display: flex;
            justify-content: space-between;
        }
        
        .option-price {
            color: #e74c3c;
            font-size: 0.9em;
        }
        
        .options-grid {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 8px;
        }
        
        .option-item {
            background: #f8f9fa;
            padding: 8px;
            border-radius: 5px;
            text-align: center;
            font-size: 0.9em;
            border: 1px solid #e9ecef;
        }
        
        .remove-options {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 8px;
        }
        
        .remove-item {
            background: #f8f9fa;
            padding: 8px;
            border-radius: 5px;
            text-align: center;
            font-size: 0.9em;
            border: 1px solid #e9ecef;
            color: #666;
        }
        
        .cart-section {
            background: white;
            border-radius: 10px;
            padding: 15px;
            margin-top: 20px;
            box-shadow: 0 2px 5px rgba(0,0,0,0.1);
        }
        
        .add-to-cart-btn {
            background-color: #e74c3c;
            color: white;
            border: none;
            border-radius: 25px;
            padding: 12px;
            width: 100%;
            font-size: 1.1em;
            font-weight: bold;
            cursor: pointer;
            margin-bottom: 10px;
        }
        
        .total-price {
            text-align: center;
            font-size: 1.3em;
            font-weight: bold;
            color: #e74c3c;
        }
        
        .bottom-nav {
            position: fixed;
            bottom: 0;
            left: 0;
            right: 0;
            background: white;
            display: flex;
            justify-content: space-around;
            padding: 15px;
            border-top: 1px solid #ddd;
            max-width: 400px;
            margin: 0 auto;
        }
        
        .nav-item {
            text-align: center;
            color: #666;
            font-size: 0.9em;
        }
        
        .nav-item.active {
            color: #e74c3c;
        }
        
        .design-nav {
            display: flex;
            justify-content: space-around;
            margin-top: 20px;
            padding: 10px;
            background: white;
            border-radius: 10px;
            font-size: 0.8em;
            color: #666;
        }
    </style>
</head>
<body>
    <!-- Header Section -->
    <div class="header">
        <h1>CBN</h1>
        
        <!-- Menu Categories -->
        <div class="menu-categories">
            <span class="active">Starters</span>
            <span>Main Courses</span>
            <span>Sides</span>
            <span>Desserts</span>
        </div>
    </div>

    <div class="divider"></div>

    <!-- Spaghetti Item -->
    <div class="menu-item">
        <div class="item-header">
            <div class="item-name">Spaghetti</div>
            <div class="item-price">$60.0</div>
            <button class="add-btn">+</button>
        </div>
    </div>

    <!-- Steak Item -->
    <div class="menu-item">
        <div class="item-header">
            <div class="item-name">Steak</div>
            <div class="item-price">$80.0</div>
            <button class="add-btn">+</button>
        </div>
    </div>

    <div class="divider"></div>

    <!-- Product Detail Section -->
    <div class="menu-item">
        <div class="item-header">
            <div style="font-size: 1.4em; font-weight: bold;">Spaghetti $60.0</div>
        </div>
        
        <div class="description">Description</div>
        
        <!-- Choice of Pasta -->
        <div class="option-section">
            <div class="option-title">
                <span>Choice of Pasta</span>
                <span class="option-price">(+50.00)</span>
            </div>
            <div class="options-grid">
                <div class="option-item">Spaghetti</div>
                <div class="option-item">Angel hair</div>
                <div class="option-item">Penne</div>
                <div class="option-item">Fettuccine</div>
            </div>
        </div>
        
        <!-- Remove Ingredients -->
        <div class="option-section">
            <div class="option-title">
                <span>Remove Ingredients</span>
                <span class="option-price">(+50.00)</span>
            </div>
            <div class="remove-options">
                <div class="remove-item">No cheese</div>
                <div class="remove-item">No mushroom</div>
                <div class="remove-item">No chili</div>
                <div class="remove-item">No garlic</div>
            </div>
        </div>
    </div>

    <!-- Add to Cart Section -->
    <div class="cart-section">
        <button class="add-to-cart-btn">Add to Cart</button>
        <div class="total-price">$70</div>
    </div>

    <!-- Design Navigation -->
    <div class="design-nav">
        <span>Design</span>
        <span>Elements</span>
        <span>Text</span>
        <span>Brand</span>
        <span>Uploads</span>
        <span>Too</span>
    </div>

    <!-- Bottom Navigation -->
    <div class="bottom-nav">
        <div class="nav-item active">Menu</div>
        <div class="nav-item">Cart</div>
        <div class="nav-item">Record</div>
    </div>

    <script>
        // Simple JavaScript for interactive elements
        document.querySelectorAll('.add-btn').forEach(button => {
            button.addEventListener('click', function() {
                const itemName = this.parentElement.querySelector('.item-name').textContent;
                alert(`Added ${itemName} to cart!`);
            });
        });

        document.querySelector('.add-to-cart-btn').addEventListener('click', function() {
            alert('Spaghetti added to cart! Total: $70');
        });

        // Menu category selection
        document.querySelectorAll('.menu-categories span').forEach(category => {
            category.addEventListener('click', function() {
                document.querySelectorAll('.menu-categories span').forEach(cat => {
                    cat.classList.remove('active');
                });
                this.classList.add('active');
            });
        });

        // Bottom navigation selection
        document.querySelectorAll('.nav-item').forEach(nav => {
            nav.addEventListener('click', function() {
                document.querySelectorAll('.nav-item').forEach(item => {
                    item.classList.remove('active');
                });
                this.classList.add('active');
            });
        });
    </script>
</body>
</html>
