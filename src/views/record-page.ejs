<!-- Inherit from the base template that includes the navigation bar -->
<%- include('partials/navbar', { title: 'Order records' }) %>

<div class="order-list">
  <% orders.forEach(order => { %>
    <div class="order-item" onclick="window.location='/record/<%= order._id %>'">
      <div class="order-time"><%= order.createdAt.toLocaleString() %></div>
      <div class="order-status"><%= order.status %></div>
      <div class="order-total">Total price：¥<%= order.totalPrice %></div>
    </div>
  <% }) %>
</div>

<%- include('partials/bottom-tab') %>
