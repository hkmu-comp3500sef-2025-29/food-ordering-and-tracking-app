<!DOCTYPE html>

<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Food Ordering And Tracking App</title>
</head>
<body>
    <%- include("components/nav/top"); -%>
    <%- include("components/nav/bottom"); -%>

    <main>
        <section>
            <h2>Menu Items</h2>
            <p>Browse dishes and tap to view product details.</p>
        </section>

        <section class="menu-grid">
            <% if (menuItems && menuItems.length > 0) { %>
                <% menuItems.forEach(item => { %>
                    <div class="menu-item-card">
                        <a href="/view/product/<%= item.id %>" class="menu-item-link">
                            <% if (item.image) { %>
                                <img src="<%= item.image %>" alt="<%= item.name %>" class="menu-item-image" />
                            <% } else { %>
                                <div class="menu-item-placeholder">No Image</div>
                            <% } %>

                            <div class="menu-item-info">
                                <h3><%= item.name %></h3>
                                <% if (item.description) { %>
                                    <p><%= item.description %></p>
                                <% } %>
                                <p class="price">$<%= Number(item.price).toFixed(2) %></p>
                            </div>
                        </a>
                        <button type="button" class="add-to-cart-btn" data-id="<%= item.id %>">
                            Add to Cart
                        </button>
                    </div>
                <% }) %>
            <% } else { %>
                <p>No items available at the moment.</p>
            <% } %>
        </section>
        <section>
            <button type="button">Call Staff</button>
        </section>
    </main>
</body>


</html>
