{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "module": "es2015",
        "moduleResolution": "node",
        "rootDirs": [
            "./src",
            "./src/scripts"
        ],
        "outDir": "./public/scripts",
        "paths": {
            "#/*": [
                "./src/*"
            ]
        }
    },
    "include": [
        "./src/scripts/**/*"
    ]
}
